<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParamexoActivity"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/contrail_one"
        android:text="Retour"
        android:onClick="retour"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/contrail_one"
        android:layout_marginTop="30dp"
        android:text="Que voulez-vous travaillez ?"
        android:textFontWeight="700"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/contrail_one"
        android:text="Combien de Dizaines ?"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <CheckBox
            android:id="@+id/centaine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="coherentchckbox"/>
        <CheckBox
            android:id="@+id/dizaine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="coherentchckbox"/>
        <CheckBox
            android:id="@+id/unite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+    "/>
        <CheckBox
            android:id="@+id/centaine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="coherentchckbox"/>
        <CheckBox
            android:id="@+id/dizaine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="coherentchckbox"/>
        <CheckBox
            android:id="@+id/unite2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Operande :"
        android:layout_gravity="left"
       />
    <ToggleButton
        android:id="@+id/mult"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textOff="×"
        android:textOn="×"/>
    <ToggleButton
        android:id="@+id/div"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textOff="÷"
        android:textOn="÷"
        />
    <ToggleButton
        android:id="@+id/min"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textOff="-"
        android:textOn="-"
        />
    <ToggleButton
    android:id="@+id/pls"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textOff="+"
        android:textOn="+"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="50dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:text="Timer :"
        android:layout_gravity="left"
        />
    <ToggleButton
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textOff="1min"
        android:textOn="1min"/>
    <ToggleButton
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textOff="2min"
        android:textOn="2min"
        />
    <ToggleButton
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textOff="3min"
        android:textOn="3min"
        />
</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="valider"
        android:onClick="continuercalcul"/>
</LinearLayout>